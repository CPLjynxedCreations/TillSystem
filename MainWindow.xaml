<Window x:Class="TillSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TillSystem"
        mc:Ignorable="d"
        Title="Till 2024"
        Height="620"
        Width="1200"
        MaxWidth="1200"
        MaxHeight="620"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen"
        Background="#FF0B0B1D">

    <Grid x:Name="Screen"
            Width="1200"
            Height="580"
          VerticalAlignment="Top"
          HorizontalAlignment="Left">
        <Border x:Name="SaleScreenBorder"
                Height="580"
                Width="300"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                BorderThickness="4,4,4,4"
                CornerRadius="0,20,20,0"
                BorderBrush="Gray"
                Background="LightGray">
            <Grid x:Name="SaleScreenGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
            </Grid>
        </Border>
        <Grid x:Name="ItemButtonGrid" Width="900"
              Height="580"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Margin="300,0,0,0">
            <Border Grid.Column="0"
                    Height="580"
                    Width="150"
                    CornerRadius="20,0,0,20"
                    BorderThickness="2,2,1,2"
                    BorderBrush="RoyalBlue"
                    Grid.RowSpan="9"/>
            <Border Grid.Column="1"
                    Height="580"
                    Width="150"
                    BorderThickness="1,2,1,2"
                    BorderBrush="RoyalBlue"
                    Grid.RowSpan="9"/>
            <Border Grid.Column="2"
                    Height="580"
                    Width="150"
                    BorderThickness="1,2,1,2"
                    BorderBrush="RoyalBlue"
                    Grid.RowSpan="9"/>
            <Border Grid.Column="3"
                    Height="580"
                    Width="150"
                    BorderThickness="1,2,1,2"
                    BorderBrush="RoyalBlue"
                    Grid.RowSpan="9"/>
            <Border Grid.Column="4"
                    Height="580"
                    Width="150"
                    BorderThickness="1,2,1,2"
                    BorderBrush="RoyalBlue"
                    Grid.RowSpan="9"/>
            <Border Grid.Column="5"
                    Height="580"
                    Width="150"
                    BorderThickness="1,2,2,2"
                    BorderBrush="RoyalBlue"
                    Grid.RowSpan="9"/>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition Height="65"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
        </Grid>
    </Grid>
</Window>
